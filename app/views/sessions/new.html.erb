<h1 class="new_session">Log in</h1>

<% flash.each do |message_type, message| %>
	<p class="alert alert-<%= message_type %> new_session"><%= message %></p>
<% end %>

<%= form_for(:session, url: login_path, html: {class: "new_session"} ) do |f| %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= link_to "(forgot password)", new_password_reset_path %>

  	<%= f.label :remember_me, class: "checkbox inline" do %>
		<p><%= f.check_box :remember_me %>
		<span>Remember me on this computer</span></p>
	<% end %>

	<%= f.submit "Log in" %>
<% end %>

<p class="new_session">New user? <%= link_to "Sign up now!", signup_path %></p>

<p class="new_session"><%= link_to "Home", root_path %></p>