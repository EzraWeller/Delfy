<h1 class="new_community">Create new community</h1>

<div>
  <%= form_for(@community, url: new_community_path) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

  <%= f.hidden_field :leader, value: current_user.id %>

    <%= f.submit "Create new community" %>
  <% end %>
</div>

<p class="new_community"><%= link_to "Home", root_path %></p>