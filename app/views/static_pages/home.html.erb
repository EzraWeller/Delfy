<h1>Delfy</h1>
<% if logged_in? %>
	<p><%= render 'shared/user_chunk' %></p>
	<ul id="community_selector">
		<p>Select one of your communities:</p>
		<% current_user.communities.each do |c| %>
			<li><%= button_to "#{c.name}", select_community_path(@community), 
			    	{ params: {community_id: c.id}, :disabled => current_community == c, 
			    	remote: true , form_class: 'community_select_button'} %></li>
		<% end %>
	</ul>
	<h2>Community Feed:</h2>
	<div id="community_feed"><%= render 'shared/community_feed' %></div>
	<p><%= link_to "Create community", new_community_path %></p>
	<p><%= link_to "Community Index",  communities_path %></p>
	<p><%= link_to "User Index",       index_path %></p>
	<p><%= link_to "Log out",          logout_path, method: :delete %></p>
<% else %>
	<p><%= link_to "Sign up",    signup_path %></p>
	<p><%= link_to "Log in",     login_path %></p>
<% end %>